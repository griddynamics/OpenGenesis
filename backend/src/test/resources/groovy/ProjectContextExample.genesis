package groovy
template {
    name("Projects")
    version("0.1")
    createWorkflow("create")
    destroyWorkflow("destroy")

    dataSources {
        staticList{
            name = "ds2"
            list = [project.properties("key1")]
        }
    }

    workflow("create") {
        variables {
            variable("projectKey").optional(defaultValue = project.properties("key2"))
            variable("projectList").dataSource("ds2").optional()
        }

        steps {
            teststep {
                phase = "phase1"
                text = project.properties('key3')
            }
        }
    }

    workflow("destroy") {
        steps {
            teststep {
                phase = "undeply"
                text = "destroy"
            }
        }
    }
}