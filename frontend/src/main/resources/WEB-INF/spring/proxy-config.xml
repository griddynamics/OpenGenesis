<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <import resource="mvc-config.xml"/>
    <context:property-placeholder location="${backend.properties}" system-properties-mode="OVERRIDE"/>
    <bean id="genesisService" class="com.griddynamics.genesis.spring.GenesisServiceFactoryBean">
        <constructor-arg name="useMock" value="${genesis.system.service.rest.use.mock:false}"/>
        <constructor-arg name="genesisRestService" ref="genesisRestService"/>
    </bean>
    
    <bean id="genesisRestService" class="com.griddynamics.genesis.rest.GenesisServiceRestProxy">
        <constructor-arg name="backendUrl" value="${genesis.system.service.backendUrl}"/>
    </bean>

    <bean class="com.griddynamics.genesis.rest.GenesisRestController">
        <constructor-arg name="genesisService" ref="genesisService"/>
    </bean>
</beans>