<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:annotation-config/>
    <context:property-placeholder/>
    <context:component-scan base-package="com.griddynamics" >
        <context:exclude-filter type="regex" expression = "com.griddynamics.genesis.exec.*"/>
        <context:exclude-filter type="regex" expression = ".*ServerArrayActionsContext.*"/>
        <context:exclude-filter type="regex" expression = ".*CacheContextImpl.*"/>
    </context:component-scan>
</beans>
