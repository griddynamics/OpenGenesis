package templates
template {
    name("Simple")
    version("0.1")

    createWorkflow("create")
    destroyWorkflow("destroy")

    workflow("create") {
         steps {
             execLocal {
                 agentTags = ["dev"]
                 phase = "init"
                 shell = "sh"
                 commands = ['sleep 60 && echo "Creation of new environment..."']
             }
         }
    }

    workflow("destroy") {
        steps {
        }
    }
}
